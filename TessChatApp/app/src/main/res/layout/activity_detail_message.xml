<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_detail_message"
    tools:context=".View.view.DetailMessageActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent=".0936"
        android:id="@+id/guideline_h.0936"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent=".171"
        android:id="@+id/guideline_v.171"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent=".5"
        android:id="@+id/guideline_v.5"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent=".1785"
        android:id="@+id/guideline_h.1785"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent=".9391"
        android:id="@+id/guideline_h.9391"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent=".1014"
        android:id="@+id/guideline_v.1014"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent=".1973"
        android:id="@+id/guideline_v.1973"
        android:orientation="vertical"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left_blue_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12.16dp"
        app:layout_constraintTop_toTopOf="@id/guideline_h.0936"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h.0936"/>

    <ImageView
        android:id="@+id/image_user_message"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/bacground_item_user_message"
        android:src="@drawable/ic_avatar_user_default_while_large_icon"
        android:scaleType="center"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/guideline_h.0936"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h.0936"
        app:layout_constraintRight_toRightOf="@id/guideline_v.171"
        app:layout_constraintLeft_toLeftOf="@id/guideline_v.171"/>

    <TextView
        android:id="@+id/tv_name_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:fontFamily="@font/lato_bold"
        android:text="Tran Huong Mai"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h.0936"
        app:layout_constraintLeft_toRightOf="@id/image_user_message"
        app:layout_constraintTop_toTopOf="@id/guideline_h.0936" />

    <View
        android:id="@+id/view_detail_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_rcv_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_h.1785"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:paddingBottom="6dp"
        android:background="@drawable/background_detail_message"
        android:fontFamily="@font/lato"
        android:text="Hom nay"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h.1785"
        app:layout_constraintLeft_toLeftOf="@id/guideline_v.5"
        app:layout_constraintRight_toRightOf="@id/guideline_v.5"
        app:layout_constraintTop_toTopOf="@id/guideline_h.1785" />

    <ImageView
        android:id="@+id/image_photo_local"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_photo_local_gray_icon"
        android:background="@drawable/background_detail_message"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="@id/guideline_h.9391"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h.9391"
        app:layout_constraintRight_toRightOf="@id/guideline_v.1014"
        app:layout_constraintLeft_toLeftOf="@id/guideline_v.1014"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline_h.9391"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h.9391"/>






</androidx.constraintlayout.widget.ConstraintLayout>